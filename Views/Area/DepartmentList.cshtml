@model List<departmentModel>

<h5>@ViewBag.NameCurator</h5>
<input type="hidden" name="idCurator" value="@ViewBag.idCurator"/>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><span onclick="getListCurator()">Список кураторов</span></li>
    <li class="breadcrumb-item active" aria-current="page">Список отделов</li>
  </ol>
</nav>


@if (Model != null)
{
    <div class="viewCurator" data-controller="@ViewContext.RouteData.Values["Controller"].ToString()">
        @foreach (departmentModel doc in Model)
        {            
            <nav class="nav nav-pills">
                <span data-doc="@doc.Id">@doc.Name</span>
               
                    <a asp-action="CreateDepartment" asp-route-idDepartment="@doc.Id" class="nav-item nav-link">Редактировать</a>
                    <span onclick="deleteDepartment('@doc.Id')" class="nav-item nav-link text-danger">Удалить</span>
                    <span data-del="@doc.Id" style="display:none;" class="nav-item nav-link text-danger">Подтверждаю удаление</span>
               
            </nav>
        }
    </div>
}