@*@model IEnumerable<docsModel>*@
@inject getList list
@{
    ViewData["Title"] = "Справочник отделов";
}
<h2 class="h2 nav-green">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        
        <partial name="navList" />
        <hr />
        <div class="form-group row">
            <label for="areaName" class="col-md-2 col-form-label">Район</label>
            <div class="col-md-4">
                <select onchange="getListCurator()" name="areaName" class="form-control" asp-items="@(await list.areaList())"></select>
            </div>
            <div class="col-md-6">
                <a href="" name="editArea" class="btn btn-light">Редактировать</a>
                <button onclick="deleteArea()" class="btn btn-danger">Удалить</button>
                <button name="deleteArea" style="display:none;" class="btn btn-danger">Подтверждаю удаление</button>
            </div>
        </div>
        <hr />
        <div id="viewCurator">
        </div>



       
       
    </div>
     <div class="col-md-6" id="viewPartial">
        </div>
</div>

<div class="modal fade" id="viewAdminProcModalForDoc" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width:1000px;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Выбор административной процедуры</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div name="viewAdminProc" class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" id="saveButton" class="btn btn-primary">Сохранить</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>
