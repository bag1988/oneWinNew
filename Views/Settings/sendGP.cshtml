@{
    ViewData["Title"] = "Выгрузка данных";
}
<h2 class="h2 nav-green">@ViewData["Title"]</h2>
<div class="col-md-8 offset-md-2">
     
    <nav class="nav nav-pills nav-justified">
        <a asp-action="index" class="nav-item nav-link">Настройки</a>
         <a asp-action="loadGP" class="nav-item nav-link">Загрузка из отдела ЖП</a>
        @*<a asp-action="index" class="nav-item nav-link">Загрузить дома</a>*@
        <a asp-action="sendGP" class="nav-item nav-link active">Выгрузка данных</a>
    </nav>
    <hr />
    @if(ViewBag.message!=null)
    {
        <div class="alert alert-primary" role="alert">
            @ViewBag.message
        </div>
    }
    <div class="alert alert-info" role="alert">
        Для выгрузки данных в отдел Жилищной Политики необходимо указывать <b>ДАТУ ОТПРАВЛЕНИЯ ОБРАЩЕНИЯ В ОТДЕЛ</b>
    </div>
    <form asp-action="sendGP" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label for="starDate" class="col-md-2 col-form-label">С</label>
            <div class="col-md-10">
                <input name="starDate" type="date" class="form-control" />
            </div>
        </div>
         <div class="form-group row">
            <label for="endDate" class="col-md-2 col-form-label">По</label>
            <div class="col-md-10">
                <input name="endDate" type="date" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label for="selectFor" class="col-md-2 col-form-label">Отправить в</label>
            <div class="col-md-10">
                <select name="selectFor" class="form-control" >
                    <option value="gp">ЖП</option>
                    <option value="site">Сайт</option>
                </select>
            </div>
        </div>
        <div class="form-group row" style="padding-left:15px;">
            <input type="submit" value="Отправить" class="btn btn-primary" />
        </div>
    </form>



</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}