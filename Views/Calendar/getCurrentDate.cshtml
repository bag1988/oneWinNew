@model oneWin.Models.generalModel.calendarModel

<div class="form-group row">
    <label for="daysCalendar" class="col-form-label col-md-12">Введите полный список всех выходных и праздничных дней в месяце по образцу: <b>1,2,8,9,15,16,22,23,29,30</b></label>
    <div class="col-md-12">
        <input type="text" name="daysCalendar" id="daysCalendar" value="@((Model!=null&&Model.days!=null)?Model.days.Trim():"")" class="form-control" />
    </div>
</div>

<div class="form-group row">
    <span class="btn btn-link" onclick="saveCurrentDate()">Сохранить</span>
</div>

<hr />

<h5>Список сохранненых праздничных дней</h5>
@if (Model != null&&Model.days!=null)
{

    <ul>
        @foreach (var d in Model.days.Trim().Split(','))
        {
            <li>@(d+"."+Model.Month+"."+Model.Year)</li>
        }
    </ul>
}
else
{
    <ul>
        <li>Нет записей</li>
    </ul>
}