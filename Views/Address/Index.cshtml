@model IEnumerable<streetModel>
@{
    ViewData["Title"] = "Справочник адресов";
}
 <h2 class="h2 nav-green">@ViewData["Title"]</h2> 
<div class="row">
<div class="col-md-8 offset-md-2">
      
    <nav class="nav nav-pills nav-justified">
        <a asp-action="index" class="nav-item nav-link active">Список адресов</a>
        <a asp-action="create" class="nav-item nav-link">Добавить адрес</a>
    </nav>
    <hr />
    <form asp-action="index" method="get">        
        <div class="form-group row">
            <label for="searchName" class="col-form-label col-md-2">Наименование</label>
            <div class="col-md-6">
                <input id="searchName" name="searchName" value="@Context.Request.Query["searchName"]" class="form-control" />
            </div>
            <div class="col-md-4">
                <input type="submit" value="Поиск" class="btn btn-primary" />
                <a asp-action="index" class="btn btn-light">Очистить поиск</a>
            </div>
        </div>
        </form>
     <hr />
    @if (Model != null)
    {
        <div class="guideList" data-controller="@ViewContext.RouteData.Values["Controller"].ToString()">
            @foreach (streetModel doc in Model)
            { 
             <div>
                         <span data-doc="@doc.Name">@doc.Name</span>
                       
                            <div style="display:none;" name="actionMenu">
                                <a  asp-action="create" asp-route-idDoc="@doc.Name">Редактировать</a>
                                <a class="text-danger" asp-action="delete" asp-route-idDoc="@doc.Name">Удалить</a>
                            </div>
                        
                    </div>
            }
        </div>
    }
    <hr />
  
</div>
 <div class="col-md-6" id="viewPartial">
       
   </div>
</div>