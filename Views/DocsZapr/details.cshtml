@model zaprDocModel
@inject getList list


<h4>Просмотр информации</h4>
<ul>
    <li><b>Наименование</b> @Model.Name</li>
    <li><b>Кол-во дней</b> @Model.CountDay</li>
    @if (Model != null && Model.ZaprDocID != Guid.Empty && Model.File != null)
    {
        <li><b>Документ</b> <a href="~/returnFile/index?urlFile=Template/@Model.File">@Model.File</a></li>
    }
    <li><b>Сумма</b> @Model.Summ</li>
    <li><b>Http</b> @Model.HTTP</li>
    <li><b>Params</b> @Model.Params</li>
    <li><b>Имя файла для клиент-банка</b> @Model.BankName</li>
    <li><b>Клиент-банк</b> @Model.BankParams</li>
    <li><b>Организация</b> @(list.orgZaprList().Result.FirstOrDefault(x=>x.Value==Model.OrgZaprID.ToString())!=null?list.orgZaprList().Result.FirstOrDefault(x=>x.Value==Model.OrgZaprID.ToString()).Text:"")</li>
</ul>