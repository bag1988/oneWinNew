@using Microsoft.AspNetCore.Identity
@model oneWin.Models.changeRoleViewModel
@{
    ViewData["Title"] = "Изменение ролей для пользователя";
}
<h2 class="h2 nav-green">@ViewData["Title"] <b>@Model.UserName</b></h2>
<div class="col-md-4 offset-md-4">
    
    <form asp-action="Edit" asp-area="admin" method="post">
        <input type="hidden" name="userId" value="@Model.UserId" />

        @foreach (IdentityRole role in Model.AllRoles)
        {
            <div class="form-check">
                <input type="checkbox" id="@role.Id" class="form-check-input" name="roles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />
                <label for="@role.Id" class="form-check-label">@role.Name</label>
            </div>
        }
        <hr/>
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a class="btn btn-sm" asp-area="admin" asp-controller="roles" asp-action="userlist">Отмена</a>
    </form>
</div>
