@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Список ролей";
}
<h2 class="h2 nav-green">@ViewData["Title"]</h2>
    <div class="col-md-4 offset-md-4">
         
        <a class="btn btn-sm btn-primary"  asp-area="admin" asp-action="Create">Добавить роль</a>
        <a class="btn btn-sm btn-primary"  asp-area="admin" asp-action="UserList">Список пользователей</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Наименование</th>
                    <th>Действие</th>
                </tr>
            </thead>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <form asp-action="Delete" asp-area="admin" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>

    </div>