@page
@using oneWin.Service
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}


<h1 class="h2 nav-green">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Создайте новую учетную запись.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Login"></label>
                <input asp-for="Input.Login" class="form-control" />
                <span asp-validation-for="Input.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.otdel"></label>
                <select asp-for="Input.otdel" asp-items="@(new SelectList(dictionaryList.otdelList ,"Key","Value"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Input.role"></label>
                <select asp-for="Input.role" asp-items="Model.RoleList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Зарегистрировать</button>
        </form>
    </div>    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
