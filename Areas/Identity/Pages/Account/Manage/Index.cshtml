@page
@using oneWin.Service
@model IndexModel
@{
    ViewData["Title"] = "Редактировать профиль пользователя";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<h2 class="h2 nav-green">@ViewData["Title"] <b>@Model.Input.Login</b></h2>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.UserId" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Input.Login">Логин</label>
                <input asp-for="Input.Login" class="form-control" />
                <span asp-validation-for="Input.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username">Email</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.otdel"></label>
                <select asp-for="Input.otdel" asp-items="@(new SelectList(dictionaryList.otdelList ,"Key","Value"))" class="form-control"></select>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Сохранить</button>
            <a class="btn btn-sm" asp-area="admin" asp-controller="roles" asp-action="userlist">Список пользователей</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}